      "@student-service/course-info-core": [
        "libs/course-info-core/src/index.ts"
      ],
      "@student-service/course-lookup-api": [
        "libs/course-lookup-api/src/index.ts"
      ],
      "@student-service/course-lookup-core": [
        "libs/course-lookup-core/src/index.ts"
      ],
      "@student-service/course-store-prisma": [
        "libs/course-store-prisma/src/index.ts"
      ],
      "@student-service/crud-api": ["libs/crud-api/src/index.ts"],
      "@student-service/crud-core": ["libs/crud-core/src/index.ts"],
      "@student-service/crud-core-api": ["libs/crud-core-api/src/index.ts"],
      "@student-service/student-broker-kafka": [
        "libs/student-broker-kafka/src/index.ts"
